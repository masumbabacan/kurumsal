<%- include('../include/header.ejs'); -%>
          <!-- Content wrapper -->
          <div class="content-wrapper">
            <!-- Content -->
            <div class="container-xxl flex-grow-1 container-p-y">
              <div class="row">
                <div class="col-lg-12 mb-4 order-0">
                    <div class="card mb-4">
                        <h5 class="card-header font12px">Referans Ekle</h5>
                        <hr class="my-0" />
                          <form id="createReferance" method="POST" enctype="multipart/form-data" onsubmit="return false">
                            <div class="card-body">
                              <div class="row">
                                <div class="mb-3 col-12">
                                  <label for="firstName" class="form-label font10px">Resim Ekle</label>
                                  <div class="row">
                                    <div class="col-2 add-image d-flex justify-content-center align-items-center px-2 mb-2">
                                      <label 
                                        for="upload" 
                                        class="btn w-100 d-flex justify-content-center align-items-center border rounded" 
                                        style="height: 100px;"
                                        tabindex="0">
                                        <span style="opacity: .5;" class="d-none d-sm-block">
                                          <i style="font-size: 30px;" class="bx bx-plus me-1"></i>
                                        </span>
                                        <input
                                          type="file"
                                          id="upload"
                                          name="images"
                                          class="account-file-input"
                                          hidden
                                          accept="image/png, image/jpeg"
                                        />
                                      </label>
                                    </div>
                                  </div>
                                </div>
                                <div class="mb-3 col-12">
                                  <label for="firstName" class="form-label font10px">adı</label>
                                  <input
                                    class="form-control font12px"
                                    type="text"
                                    id="name"
                                    name="name"
                                    autofocus
                                  />
                                </div>
                                <div class="mb-3 col-12">
                                  <label for="description" class="form-label font10px">açıklaması</label>
                                  <textarea class="form-control font12px" type="text" name="description" id="summernote"></textarea>
                                </div>
                              </div>
                              <div class="mt-2">
                                <button type="submit" class="btn btn-primary me-2 font12px">Ekle</button>
                                <button type="reset" class="btn btn-danger font12px">
                                  <a class="text-white" href="http://localhost:3000/api/kurumsal/referances">Geri dön</a>
                                </button>
                              </div>
                            </div>
                          </form>
                        </div>
                        <!-- /Account -->
                      </div>
                </div>
              </div>
            </div>
            <!-- / Content -->
<%- include('../include/footer.ejs'); -%>
<script>
    $("#createReferance").on("submit",function(e) {
        e.preventDefault();
        var formData = new FormData(this);
        $.ajax({
            url : "http://localhost:3000/api/kurumsal/referances",
            type : "POST",
            data : formData,
            success : (response) => {
                Swal.fire({
                    icon: "success",
                    text: response.msg
                });
            },
            error : (xhr, status, error) => {
                Swal.fire({
                    icon: "error",
                    text: xhr.responseJSON.msg
                });
            },
            cache: false,
            contentType: false,
            processData: false
        });
    });

    $("#upload").change(function () {
        const files = this.files;
        files.forEach(file => {
          if (file) {
            let reader = new FileReader();
            reader.onload = function (event) {
                $('#upload').parents('.add-image').after(`<div class="col-2 d-flex justify-content-center align-items-center px-2 mb-2">
                                      <img class="w-100 rounded" 
                                      src="${event.target.result}" 
                                      alt=""
                                      style="object-fit: cover; height:100px">
                                    </div> `);
            };
            reader.readAsDataURL(file);
          }
        });
    });
</script>