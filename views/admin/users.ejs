<%- include('./include/header.ejs'); -%>
          <!-- Content wrapper -->
          <div class="content-wrapper">
            <!-- Content -->

            <div class="container-xxl flex-grow-1 container-p-y">
              <div class="row">
                <div class="col-lg-12 mb-4 order-0">
                    <div class="card">
                        <h5 class="card-header" style="width:49%">Kullanıcılar</h5>
                        <div class="table-responsive text-nowrap">
                          <table class="table">
                            <thead>
                              <tr>
                                <th>Adı</th>
                                <th>Soyadı</th>
                                <th>Fotoğrafı</th>
                                <th>Durumu</th>
                                <th>Detaylar</th>
                              </tr>
                            </thead>
                            <tbody class="table-border-bottom-0">
                                <% users.forEach((user) => { %> 
                                    <tr>
                                        <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong><%=user.name%></strong></td>
                                        
                                        <td><%=user.surname%></td>
                                        
                                        <td>
                                            <ul class="list-unstyled users-list m-0 avatar-group d-flex align-items-center">
                                                <li data-bs-toggle="tooltip"
                                                data-popup="tooltip-custom"
                                                data-bs-placement="top"
                                                class="avatar avatar-xs pull-up"
                                                title="<%=user.email%>">
                                                    <% if(!user.image) { %> 
                                                        <img src="https://cdn-icons-png.flaticon.com/512/1053/1053244.png?w=360" alt="Avatar" class="rounded-circle" />
                                                    <% } else { %>
                                                        <img src="<%=user.image%>" alt="Avatar" class="rounded-circle" />
                                                    <% } %>
                                                </li>
                                            </ul>
                                        </td>

                                        <td>
                                            <% if(!user.isVerified) { %> 
                                                <span class="badge bg-label-danger me-1">Pasif</span>
                                            <% } else { %>
                                                <span class="badge bg-label-primary me-1">Aktif</span>
                                            <% } %>
                                        </td>

                                        <td>
                                        <div class="dropdown">
                                            <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                            <i class="bx bx-dots-vertical-rounded"></i>
                                            </button>
                                            <div class="dropdown-menu">
                                            <a class="dropdown-item" href="javascript:void(0);"
                                                ><i class="bx bx-edit-alt me-1"></i> Güncelle</a
                                            >
                                            <a class="dropdown-item" href="javascript:void(0);"
                                                ><i class="bx bx-trash me-1"></i> Delete</a
                                            >
                                            </div>
                                        </div>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                          </table>
                          <div class="row p-0 m-0 w-100">
                            <div class="col-4 p-4 m-0">
                                Toplamda <b class="text-primary"><%=NumberOfData%></b> Kayıt
                            </div>
                            <div class="col-4 p-4 m-0">
                                masum
                            </div>
                            <div class="col-4 p-4 m-0">
                                <nav aria-label="Page navigation example" class="d-flex justify-content-end align-items-end">
                                    <ul class="pagination">
                                        <li class="page-item" onchange="location = this.value;"><a class="page-link" href="">Previous</a></li>
                                            <li class="page-item">
                                                <select class="page-link" onchange="location = this.value;">
                                                    <% for (var a=1; a<=pages; a++){ %>
                                                        <option value="?page=<%= a; %>"><%= a; %></option>
                                                    <% } %>
                                                </select>
                                            </li>
                                        <li class="page-item"><a class="page-link" href="#">Next</a></li>
                                    </ul>
                                </nav>
                            </div>
                          </div>
                        </div>
                    </div>
                </div>
              </div>
            </div>
            <!-- / Content -->
<%- include('./include/footer.ejs'); -%>